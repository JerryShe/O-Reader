{
    if (style == "red")
    {
        windowButtonsStyle[0] = "#MainWidget {background-color:rgb(162, 0, 70);}";

        windowButtonsStyle[1] = "#login{"
                                "background-color:rgb(151, 151, 227);"
                                "border: none;"
                                "background-repeat: none;}"
