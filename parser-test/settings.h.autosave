#ifndef SETTINGS_H
#define SETTINGS_H

#include <QString>

struct TextStyleSheet
{
    QString Font;
    short FontSize;
    short TextMark;         // 00 - нормальный 01 - болд 10 - курсив 11 - болд+курсив
    short CharacterInterval;
    short ParagraphIndent;
    short TextAlign;
    short TextLeftMargin;
    short TextRightMargin;
    bool FirstCharacterEmphasizing;

    
    TextStyleSheet();
    friend &operator<<(QDataStream &out, TextStyleSheet &styleElem);
    friend &operator>>(QDataStream &in, TextStyleSheet &styleElem);
};

struct Style
{
    TextStyleSheet TextStyle;
    TextStyleSheet HeadetStyle;
    TextStyleSheet FootnoteStyle;
    
};

class settings
{
public:
    settings();
    friend QDataStream &operator<<(QDataStream &out, const settings &SettingsElem);
    friend QDataStream &operator>>(QDataStream &out, settings &SettingsElem);

private:

    QString InterfaceStyle;
    QMap <QString, Style> StylesMap;

};

#endif // SETTINGS_H
